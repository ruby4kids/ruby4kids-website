

<%= error_messages_for :picture %>

<% form_for(:picture, :url => {:controller => :pictures, :action=> :create}, 
                      :html => { :multipart => true }) do |f| -%>
  <p>
    <label for="mugshot">Upload A Picture:</label>
    <%= f.file_field :uploaded_data %>
  </p>
  <p>
    <%= submit_tag 'Create' %>
  </p>
<% end -%>