<%- layout_options title: "Recover Password", body_class: 'passwords' -%>
<section id="site_main_passwords_new" class="site-main-content">
  <h1>Recover Password</h1>

  <%= form_for(resource, as: :user, url: user_password_path) do |f| %>
    <%= devise_error_messages! %>

    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>

    <p><%= f.submit "Send me reset password instructions" %></p>
  <% end %>

  <%= render :partial => 'users/auth_links' %>
</section>
