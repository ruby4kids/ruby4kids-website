<%- layout_options title: "Resend Unlock Instructions", body_class: 'unlocks' -%>
<section id="site_main_unlocks_new" class="site-main-content">
  <h1>Resend Unlock Instructions</h1>

  <%= form_for(resource, as: :user, url: user_unlock_path) do |f| %>
    <%= devise_error_messages! %>

    <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </p>

    <p><%= f.submit "Resend unlock instructions" %></p>
  <% end %>

  <%= render :partial => 'users/auth_links' %>
</section>
