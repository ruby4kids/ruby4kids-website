<%- layout_options title: "Sign In", body_class: 'sessions' -%>
<section id="site_main_sessions_new" class="site-main-content">
  <h1>Sign In</h1>

  <%= form_for(resource, as: :user, url: user_session_path) do |f| %>
    <p>
      <%= f.label :login, "Username or email" %>
      <%= f.text_field :login %>
    </p>

    <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </p>

    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>

    <p><%= f.submit "Sign in" %></p>
  <% end %>

  <%= render :partial => 'users/auth_links' %>
</section>
